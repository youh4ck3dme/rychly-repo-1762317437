---
const quickLinks = [
  { name: 'Domov', href: '/' },
  { name: 'Služby', href: '/sluzby' },
  { name: 'Cenník', href: '/cennik' },
  { name: 'O nás', href: '/o-nas' },
  { name: 'Kontakty', href: '/kontakty' }
];

const services = [
  'Dámske strihanie',
  'Pánske strihanie',
  'Farbenie vlasov',
  'Balayage a melír',
  'Ošetrenie vlasov',
  'Svadobné účesy'
];
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <h3 class="text-2xl font-bold mb-4">Papi Hair Design</h3>
        <p class="text-gray-300 mb-6 max-w-md">
          Profesionálny kadernícky salón v Košiciach poskytujúci komplexné služby
          strihania, farbenia a ošetrenia vlasov pre dámy a pánov.
        </p>
        <div class="space-y-2">
          <p class="text-gray-300">
            <span class="font-medium">Telefón:</span> +421 949 459 624
          </p>
          <p class="text-gray-300">
            <span class="font-medium">Email:</span> papihairdesign@gmail.com
          </p>
          <p class="text-gray-300">
            <span class="font-medium">Adresa:</span> Trieda SNP 61, Košice
          </p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Rýchle odkazy</h4>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Naše služby</h4>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <span class="text-gray-300">{service}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          © 2025 Papi Hair Design. Všetky práva vyhradené.
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">Facebook</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
