---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const contactInfo = [
  {
    title: 'Telefón',
    value: '+421 949 459 624',
    description: 'K dispozícii v pracovných hodinách',
    icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
  },
  {
    title: 'Email',
    value: 'papihairdesign@gmail.com',
    description: 'Odpovieme do 24 hodín',
    icon: 'M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
  },
  {
    title: 'Adresa',
    value: 'Trieda SNP 61, Košice',
    description: 'Pôsobíme v Košiciach',
    icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z'
  },
  {
    title: 'Pracovné hodiny',
    value: '08:00 - 17:00',
    description: 'Po - Pi, So - Ne zatvorené',
    icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z'
  }
];
---

<BaseLayout title="Kontakty - Papi Hair Design | Kontaktujte nás" description="Kontaktujte náš kadernícky salón v Košiciach. Telefón, email, adresa a kontaktný formulár pre rezerváciu termínu.">
  <Header />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-50 to-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          <span class="text-primary-600">Kontaktujte</span> nás
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          Máte otázky alebo chcete rezervovať termín? Kontaktujte nás ešte dnes a radi vám pomôžeme s vašou úpravou vlasov.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info Cards -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        {contactInfo.map((info) => (
          <div class="text-center group">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-200 transition-colors">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={info.icon} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{info.title}</h3>
            <p class="text-primary-600 font-medium mb-1">{info.value}</p>
            <p class="text-gray-600 text-sm">{info.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Form and Info -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Rezervácia termínu</h2>

          <form id="contact-form" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Meno *
                </label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="Vaše meno"
                >
              </div>
              <div>
                <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Priezvisko *
                </label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="Vaše priezvisko"
                >
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="vas@email.sk"
                >
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Telefón *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="+421..."
                >
              </div>
            </div>

            <div>
              <label for="service-type" class="block text-sm font-medium text-gray-700 mb-2">
                Typ sťahovania
              </label>
              <select
                id="service-type"
                name="service-type"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              >
                <option value="">Vyberte typ služby</option>
                <option value="haircut-women">Dámske strihanie</option>
                <option value="haircut-men">Pánske strihanie</option>
                <option value="coloring">Farbenie vlasov</option>
                <option value="balayage">Balayage a melír</option>
                <option value="treatment">Ošetrenie vlasov</option>
                <option value="wedding">Svadobné účesy</option>
                <option value="other">Iné</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Správa *
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                placeholder="Opíšte požadovanú službu, preferovaný termín a ďalšie dôležité informácie..."
              ></textarea>
            </div>

            <div class="flex items-center">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="rounded border-gray-300 text-primary-600 focus:ring-primary-500"
              >
              <label for="privacy" class="ml-2 text-sm text-gray-700">
                Súhlasím so spracovaním osobných údajov *
              </label>
            </div>

            <button
              type="submit"
              class="w-full bg-primary-600 hover:bg-primary-700 text-white py-4 px-6 rounded-lg font-semibold transition-all transform hover:scale-105 shadow-lg hover:shadow-xl"
            >
              Rezervovať termín
            </button>
          </form>
        </div>

        <!-- Map and Additional Info -->
        <div class="space-y-8">
          <!-- Map Placeholder -->
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Naša adresa</h3>
            <div class="aspect-w-16 aspect-h-10 bg-gray-200 rounded-lg overflow-hidden">
              <div class="w-full h-64 bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-16 h-16 text-primary-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <p class="text-primary-600 font-medium">Trieda SNP 61, Košice</p>
                  <p class="text-gray-600 text-sm">Slovensko</p>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ -->
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Často kladené otázky</h3>

            <div class="space-y-4">
              <div class="border-b border-gray-200 pb-4">
                <h4 class="font-semibold text-gray-900 mb-2">Ako dlho trvá návšteva salónu?</h4>
                <p class="text-gray-600 text-sm">Závisí od typu služby. Strihanie trvá 45-90 minút, farbenie 2-3 hodiny, kompletné ošetrenie môže trvať až 4 hodiny.</p>
              </div>
              <div class="border-b border-gray-200 pb-4">
                <h4 class="font-semibold text-gray-900 mb-2">Je potrebné objednať sa vopred?</h4>
                <p class="text-gray-600 text-sm">Áno, odporúčame rezerváciu termínu vopred, aby sme vám mohli zaručiť preferovaný čas.</p>
              </div>
              <div class="border-b border-gray-200 pb-4">
                <h4 class="font-semibold text-gray-900 mb-2">Pracujete aj cez víkendy?</h4>
                <p class="text-gray-600 text-sm">Nie, náš salón je otvorený len v pracovných dňoch od 8:00 do 17:00.</p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Kedy dostanem cenovú ponuku?</h4>
                <p class="text-gray-600 text-sm">Cenu vám oznámime pri rezervácii termínu na základe požadovaných služieb.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Chcete si rezervovať termín?
      </h2>
      <p class="text-xl text-primary-100 mb-8">
        Zavolajte nám alebo napíšte email a dohodneme si termín, ktorý vám vyhovuje.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="tel:+421949459624"
          class="bg-white text-primary-600 hover:bg-gray-100 px-8 py-4 rounded-lg text-lg font-semibold transition-all transform hover:scale-105 shadow-lg"
        >
          +421 949 459 624
        </a>
        <a
          href="mailto:papihairdesign@gmail.com"
          class="border-2 border-white text-white hover:bg-white hover:text-primary-600 px-8 py-4 rounded-lg text-lg font-semibold transition-all"
        >
          papihairdesign@gmail.com
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<script>
  // Form submission handler
  const form = document.getElementById('contact-form');
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      // Show loading state
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Odosielam...';
      submitBtn.disabled = true;

      try {
        // Simulate form submission
        await new Promise(resolve => setTimeout(resolve, 2000));

        // Show success message
        alert('Ďakujeme za vašu správu! Ozveme sa vám do 24 hodín a potvrdíme termín.');

        // Reset form
        form.reset();
      } catch (error) {
        alert('Nastala chyba pri odosielaní formulára. Skúste to prosím znovu.');
      } finally {
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    });
  }
</script>